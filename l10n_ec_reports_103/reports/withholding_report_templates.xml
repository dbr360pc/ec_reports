<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Report Definition -->
    <record id="action_report_withholding_103" model="ir.actions.report">
        <field name="name">Form 103 - Withholding Report</field>
        <field name="model">withholding.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ec_reports_103.report_withholding_103_document</field>
        <field name="report_file">l10n_ec_reports_103.report_withholding_103_document</field>
        <field name="binding_model_id" ref="model_withholding_report_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Template -->
    <template id="report_withholding_103_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-12">
                                <h2>Form 103 - Withholding Report</h2>
                                <p>
                                    <strong>Company:</strong> <span t-field="doc.company_id.name"/><br/>
                                    <strong>Period:</strong> <t t-esc="doc.month"/>/<t t-esc="doc.year"/><br/>
                                    <strong>Generated:</strong> <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
                                </p>
                            </div>
                        </div>
                        
                        <t t-if="doc.summary_data">
                            <div class="row">
                                <div class="col-12">
                                    <h3>Withholding Summary</h3>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Form Code</th>
                                                <th>Category</th>
                                                <th>Tax Name</th>
                                                <th>Base Amount</th>
                                                <th>Withholding Amount</th>
                                                <th>Count</th>
                                                <th>Avg Rate %</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="summary" t-value="eval(doc.summary_data)"/>
                                            <tr t-foreach="summary" t-as="line">
                                                <td><t t-esc="line['form_code']"/></td>
                                                <td><t t-esc="line['category']"/></td>
                                                <td><t t-esc="line['tax_name']"/></td>
                                                <td class="text-right"><t t-esc="'{:,.2f}'.format(line['base_amount'])"/></td>
                                                <td class="text-right"><t t-esc="'{:,.2f}'.format(line['withholding_amount'])"/></td>
                                                <td class="text-right"><t t-esc="line['count']"/></td>
                                                <td class="text-right"><t t-esc="'{:.2f}'.format(line['average_rate'])"/>%</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12">
                                    <h3>Withholding Details</h3>
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Invoice</th>
                                                <th>Partner</th>
                                                <th>Date</th>
                                                <th>Tax Name</th>
                                                <th>Rate %</th>
                                                <th>Base Amount</th>
                                                <th>Withholding Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="details" t-value="eval(doc.detail_data)"/>
                                            <tr t-foreach="details[:100]" t-as="detail">
                                                <td><t t-esc="detail['invoice']"/></td>
                                                <td><t t-esc="detail['partner']"/></td>
                                                <td><t t-esc="detail['date']"/></td>
                                                <td><t t-esc="detail['tax_name']"/></td>
                                                <td class="text-right"><t t-esc="'{:.2f}'.format(detail['percentage'])"/>%</td>
                                                <td class="text-right"><t t-esc="'{:,.2f}'.format(detail['base_amount'])"/></td>
                                                <td class="text-right"><t t-esc="'{:,.2f}'.format(detail['withholding_amount'])"/></td>
                                            </tr>
                                            <t t-if="len(details) > 100">
                                                <tr>
                                                    <td colspan="7" class="text-center">
                                                        <em>... and <t t-esc="len(details) - 100"/> more records. See CSV export for complete data.</em>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>