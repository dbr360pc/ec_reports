<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Account Move Form View Extension -->
    <record id="view_move_form_ats" model="ir.ui.view">
        <field name="name">account.move.form.ats</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="x_ec_payment_method_id"/>
                <button name="action_suggest_payment_method" string="Suggest Payment Method" 
                        type="object" class="oe_link" 
                        invisible="state != 'posted' or move_type not in ('out_invoice', 'in_invoice')"/>
            </xpath>
            
            <xpath expr="//field[@name='ref']" position="after">
                <field name="x_ec_document_type_id"/>
                <field name="x_ec_sustain_code_id"
                       invisible="move_type not in ('in_invoice', 'in_refund')"/>
                <field name="x_ec_supplier_invoice_number" 
                       invisible="move_type not in ('in_invoice', 'in_refund')"
                       required="move_type in ('in_invoice', 'in_refund')"/>
                <field name="x_ec_supplier_authorization"
                       invisible="move_type not in ('in_invoice', 'in_refund')"
                       required="move_type in ('in_invoice', 'in_refund')"/>
            </xpath>
            
            <xpath expr="//field[@name='reversed_entry_id']" position="after">
                <group string="ATS Reference Document Info" 
                       invisible="move_type not in ('out_refund', 'in_refund')">
                    <field name="x_ec_reference_document_type"/>
                    <field name="x_ec_reference_series"/>
                    <field name="x_ec_reference_sequential"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>