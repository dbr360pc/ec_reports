<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ATS Report Wizard Form View -->
    <record id="view_ats_report_wizard_form" model="ir.ui.view">
        <field name="name">ats.report.wizard.form</field>
        <field name="model">ats.report.wizard</field>
        <field name="arch" type="xml">
            <form string="ATS SRI Report">
                <sheet>
                    <div class="oe_title">
                        <h1>ATS SRI Report</h1>
                        <h3>Anexo Transaccional Simplificado</h3>
                    </div>
                    
                    <group>
                        <group string="Report Parameters">
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="month"/>
                            <field name="year"/>
                        </group>
                        <group string="Report Options">
                            <field name="include_sales"/>
                            <field name="include_purchases"/>
                            <field name="include_withholdings"/>
                        </group>
                    </group>
                    
                    <div class="alert alert-info" invisible="xml_file != False">
                        <strong>Instructions:</strong><br/>
                        1. Select company, month and year<br/>
                        2. Choose which transaction types to include<br/>
                        3. Click "Generate ATS Report" to create XML<br/>
                        4. Download the ZIP file for SRI submission
                    </div>
                    
                    <div invisible="validation_report == False">
                        <div class="alert alert-success">
                            <strong>âœ“ ATS Report Generated Successfully!</strong> 
                        </div>
                        <separator string="Validation Report"/>
                        <field name="validation_report" widget="html" readonly="1"/>
                    </div>
                    
                    <div invisible="xml_file == False">
                        <separator string="Generated Files"/>
                        <div class="alert alert-success">
                            <strong>Files ready for download:</strong> Use the "Export XML ZIP" button to download the file for SRI submission.
                        </div>
                        <group>
                            <field name="xml_file" filename="xml_filename" readonly="1"/>
                            <field name="xml_filename" invisible="1"/>
                            <field name="zip_file" filename="zip_filename" readonly="1"/>
                            <field name="zip_filename" invisible="1"/>
                        </group>
                    </div>
                    
                </sheet>
                <footer>
                    <button name="action_generate_report" string="Generate ATS Report" 
                            type="object" class="btn-primary" 
                            invisible="xml_file != False"/>
                    <button name="action_export_xml_zip" string="Export XML ZIP" 
                            type="object" class="btn-secondary"
                            invisible="xml_file == False"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ATS Report Wizard Action -->
    <record id="action_ats_report_wizard" model="ir.actions.act_window">
        <field name="name">ATS Report</field>
        <field name="res_model">ats.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_user'), ref('account.group_account_manager')])]"/>
    </record>

</odoo>