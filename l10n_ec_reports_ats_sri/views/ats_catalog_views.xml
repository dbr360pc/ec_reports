<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ATS ID Type Views -->
    <record id="view_ats_id_type_tree" model="ir.ui.view">
        <field name="name">ats.id.type.tree</field>
        <field name="model">ats.id.type</field>
        <field name="arch" type="xml">
            <tree string="ATS ID Types">
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="view_ats_id_type_form" model="ir.ui.view">
        <field name="name">ats.id.type.form</field>
        <field name="model">ats.id.type</field>
        <field name="arch" type="xml">
            <form string="ATS ID Type">
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_ats_id_type" model="ir.actions.act_window">
        <field name="name">ATS ID Types</field>
        <field name="res_model">ats.id.type</field>
        <field name="view_mode">tree,form</field>
    </record>

