<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- VAT Report Templates -->
    <record id="action_report_ec_vat_103_104" model="ir.actions.report">
        <field name="name">Ecuador VAT Report (Forms 103/104)</field>
        <field name="model">vat.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_ec_reports_vat.report_ec_vat_document</field>
        <field name="report_file">l10n_ec_reports_vat.report_ec_vat_document</field>
        <field name="binding_model_id" ref="model_vat_report_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- VAT Report PDF Template -->
    <template id="report_ec_vat_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row mb-3">
                            <div class="col-12">
                                <h2>Ecuador VAT Report (Forms 103/104)</h2>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Company:</strong> <span t-field="doc.company_id.name"/><br/>
                                        <strong>RUC:</strong> <span t-field="doc.company_id.vat"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Period:</strong> <t t-esc="doc.month"/>/<t t-esc="doc.year"/><br/>
                                        <strong>Generated:</strong> <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <t t-if="doc.summary_data">
                            <div class="row">
                                <div class="col-12">
                                    <h4>Summary by Form Box</h4>
                                    <table class="table table-bordered table-sm">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Box Code</th>
                                                <th>Description</th>
                                                <th>Section</th>
                                                <th class="text-right">Base Amount</th>
                                                <th class="text-right">Tax Amount</th>
                                                <th class="text-right">Total Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="summary" t-value="eval(doc.summary_data)"/>
                                            <tr t-foreach="summary" t-as="line">
                                                <td><strong><t t-esc="line['code']"/></strong></td>
                                                <td><t t-esc="line['name']"/></td>
                                                <td><t t-esc="line['section'].title()"/></td>
                                                <td class="text-right">$<t t-esc="'{:,.2f}'.format(line['base_amount'])"/></td>
                                                <td class="text-right">$<t t-esc="'{:,.2f}'.format(line['tax_amount'])"/></td>
                                                <td class="text-right"><strong>$<t t-esc="'{:,.2f}'.format(line['total_amount'])"/></strong></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                            <div class="row mt-4" style="page-break-inside: avoid;">
                                <div class="col-12">
                                    <h4>Transaction Details (First 50 records)</h4>
                                    <table class="table table-sm">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Document</th>
                                                <th>Partner</th>
                                                <th>Date</th>
                                                <th>Type</th>
                                                <th class="text-right">Base</th>
                                                <th class="text-right">Tax</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="details" t-value="eval(doc.detail_data)"/>
                                            <tr t-foreach="details[:50]" t-as="detail">
                                                <td><t t-esc="detail['invoice']"/></td>
                                                <td><t t-esc="detail['partner'][:30]"/>...</td>
                                                <td><t t-esc="detail['date']"/></td>
                                                <td><t t-esc="detail['document_type']"/></td>
                                                <td class="text-right">$<t t-esc="'{:,.2f}'.format(detail['base_amount'])"/></td>
                                                <td class="text-right">$<t t-esc="'{:,.2f}'.format(detail['tax_amount'])"/></td>
                                            </tr>
                                            <t t-if="len(details) > 50">
                                                <tr>
                                                    <td colspan="6" class="text-center text-muted">
                                                        <em>... and <t t-esc="len(details) - 50"/> more records. See CSV export for complete data.</em>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </t>
                        
                        <t t-if="not doc.summary_data">
                            <div class="alert alert-warning">
                                <strong>No data found</strong> for the selected period. Please ensure:
                                <ul>
                                    <li>Invoices are posted</li>
                                    <li>Taxes are properly configured</li>
                                    <li>Tax groups are mapped to form boxes</li>
                                </ul>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>