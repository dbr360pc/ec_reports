<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Root Ecuador Reports Menu -->
    <menuitem id="menu_ec_reports_root"
              name="Ecuador Reports"
              parent="account.menu_finance"
              sequence="100"/>

    <!-- VAT Reports Action and Menu -->
    <record id="action_ec_vat_reports" model="ir.actions.act_window">
        <field name="name">VAT Reports (103/104)</field>
        <field name="res_model">vat.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_user'), ref('account.group_account_manager')])]"/>
    </record>
    
    <menuitem id="menu_ec_vat_reports"
              name="VAT Reports (103/104)"
              parent="menu_ec_reports_root"
              action="action_ec_vat_reports"
              sequence="10"/>

    <!-- Configuration submenu -->
    <menuitem id="menu_ec_reports_config"
              name="Ecuador Configuration"
              parent="account.menu_account_config"
              sequence="100"/>

    <!-- 104 Line Mappings -->
    <menuitem id="menu_ec_104_line_mappings"
              name="Form 104 Line Mappings"
              parent="menu_ec_reports_config"
              action="action_ec_104_line"
              sequence="10"/>

</odoo>